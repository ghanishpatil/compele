<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card style with navy theme -->
    <style name="NavyCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="strokeColor">#E6EEF9</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Text input style with navy theme -->
    <style name="NavyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/navy_medium</item>
        <item name="hintTextColor">@color/navy_medium</item>
    </style>
    
    <!-- Header text style -->
    <style name="NavyHeaderText">
        <item name="android:textColor">@color/navy_darkest</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Subheader text style -->
    <style name="NavySubheaderText">
        <item name="android:textColor">@color/navy_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Regular text style -->
    <style name="NavyRegularText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Bottom Navigation Text style -->
    <style name="BottomNavigationTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">#4D000000</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>
</resources> 